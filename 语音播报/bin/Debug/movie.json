  text-transform: uppercase;
  text-align: left;
}
main{
  margin: 0 20px;
}

img, input, button{
  margin: auto;
  display: block;
}

img{
  height: 40px;
  color: #f24949;
  font-size: 0.8em;
  text-align: center;
  line-height: 40px;
}

input{
  outline: 0;
